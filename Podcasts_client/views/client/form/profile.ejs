<div class="col-xl-9 col-lg-9 col-md-12 col-sm-12 col-12">
    <div class="card h-100">
        <div class="card-body">
            <form>
                <div class="mb-3">
                    <label for="username" class="form-label">Tài khoản:</label>
                    <input type="text" class="form-control" id="username" value="<%= user.data[0].username %>">
                </div>
                <div class="mb-3">
                    <label for="full_name" class="form-label">Họ và tên:</label>
                    <input type="text" class="form-control" id="full_name" value="<%= user.data[0].full_name %>">
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email:</label>
                    <input type="email" class="form-control" id="email" aria-describedby="emailHelp" value="<%= user.data[0].email %>">
                </div>
                <div class="mb-3">
                    <label for="images" class="form-label">Ảnh đại diện:</label>
                    <input class="form-control" type="file" id="images" accept="image/*">
                </div>
                <div class="mb-3">
                    <label class="form-label">Giới tính:</label><br>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="gender" id="0" value="0" <%= user.data[0].gender === 0 ? 'checked' : '' %>>
                        <label class="form-check-label" for="0">Nam</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="gender" id="1" value="1" <%= user.data[0].gender === 1 ? 'checked' : '' %>>
                        <label class="form-check-label" for="1">Nữ</label>
                    </div>
                </div>
                <div class="text-end">
                    <button type="submit" class="btn btn-primary">Xác nhận</button>
                </div>
            </form>
        </div>
    </div>
</div>
